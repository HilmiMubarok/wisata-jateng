<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonHome" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_home_radius</item>
        <item name="android:layout_marginLeft">@dimen/margin_h</item>
        <item name="android:layout_marginRight">@dimen/margin_h</item>
    </style>

    <style name="ButtonFb" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorFb</item>
    </style>

</resources>
